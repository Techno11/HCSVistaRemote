{
  "name": "hcs_vista_remote_backend",
  "version": "0.0.1",
  "description": "Remove control for HCS's JANDS Vista Consoles",
  "main": "build/index.js",
  "scripts": {
    "dev": "tsc && npm start",
    "start": "node build/index.js",
    "build": "tsc",
    "build-bin": "pkg ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techno11/hcsvistaremote.git"
  },
  "keywords": [
    "jands",
    "vista",
    "dmx",
    "lighting"
  ],
  "author": "Soren Zaiser",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/techno11/hcsvistaremote/issues"
  },
  "homepage": "https://github.com/techno11/hcsvistaremote#readme",
  "dependencies": {
    "express": "^4.17.3",
    "get-pixel-screen": "file:../get-pixel-screen",
    "iohook": "^0.6.6",
    "pkg": "^5.6.0",
    "prompt-sync": "^4.2.0",
    "robotjs": "git+https://github.com/octalmage/robotjs.git",
    "serialport": "^10.4.0",
    "socket.io": "^4.4.1",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/dialog-node": "^0.2.0",
    "@types/express": "^4.17.13",
    "@types/prompt-sync": "^4.1.1"
  },
  "bin": "build/index.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/iohook/**/*",
      "node_modules/@serialport/**/*"
    ],
    "targets": [
      "node14-win"
    ],
    "outputPath": "../bin"
